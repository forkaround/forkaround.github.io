{
  "name": "vite-elm-tpl",
  "author": "Ricardo Casares",
  "description": "A default template for building Elm applications using Vite.",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "postinstall": "elm-tooling install",
    "dev": "vite",
    "prebuild": "elm-tooling install",
    "build": "vite build",
    "prepreview": "vite build",
    "preview": "vite preview",
    "serve": "vite preview",
    "lint": "elm-review",
    "test": "elm-test-rs",
    "upgrade": "elm-json upgrade && cd review && elm-json upgrade && cd .."
  },
  "devDependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/prismjs": "^1.26.4",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.12.10",
    "elm-debug-transformer": "^1.2.1",
    "elm-review": "^2.10.3",
    "elm-tooling": "^1.15.0",
    "postcss": "8.4.35",
    "tailwindcss": "^3.4.4",
    "vite": "^5.1.2",
    "vite-plugin-elm-watch": "^1.3.4"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "quoteProps": "consistent"
  },
  "dependencies": {
    "debounce": "^2.1.1",
    "highlight.js": "^11.10.0",
    "ollama": "^0.5.9"
  }
}
